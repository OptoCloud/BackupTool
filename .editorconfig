# Refer to:
# https://editorconfig.org/

root = true

# Universal
[*]
end_of_line = crlf
indent_style = space

# XML config files
[*.{props,targets,ruleset,config,nuspec,resx,vsixmanifest,vsct}]
indent_size = 2

# Code files
[*.{go,sh,mod}]
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8-bom